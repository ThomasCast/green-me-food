
if (document.querySelector(".card-product[data-product-id='<%= @product.id %>']")) {
  document.querySelector(".card-product[data-product-id='<%= @product.id %>']").classList.add("added-to-cart");
}

if (document.querySelector("#cart-button")) {
  const cartButton = '<%= link_to "Afficher mon panier (#{current_user.cart_items.count}) >",cart_path, class: "btn-yellow", id: "cart-button"%>';
  document.querySelector("#cart-button").outerHTML = cartButton;
} else {
  const cartButton = '<%= link_to "Afficher mon panier (#{current_user.cart_items.count}) >",cart_path, class: "btn-yellow", id: "cart-button"%>';
  document.querySelector(".navigation-buttons").insertAdjacentHTML("beforeend", cartButton)
}

